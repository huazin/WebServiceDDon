@model IEnumerable<WebServiceDDon.Models.Monstro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Monstro", "Create")
</p>

<p>
    Monstros em Portugues:
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Categoria
        </th>
        <th>
            Nome
        </th>
        <th>
            Apelido
        </th>
        <th>
            Especie
        </th>
        <th>
            Ações
        </th>
    </tr>

    @foreach (var item in Model.Where(p => p.idiomaid == 1).OrderBy(p => p.Id_Especie))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_Monstro)
            </td>
            <td>
                @if (item.categoria == 1)
                { <label>Normal</label> }
                else
                { <label>Grandes</label>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie.Nome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_Monstro }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_Monstro }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_Monstro })
            </td>
        </tr>
    }
</table>

